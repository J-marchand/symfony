<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="https://bootswatch.com/4/flatly/bootstrap.min.css">
        {% endblock %}
    </head>
    <body>
        {% block header %}
            <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
                <a class="navbar-brand" href="/listing">Annonce</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item active">
                            <a class="nav-link" href="/listing">Acceuil<span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/add">Ajouter une annonce</a>
                        </li>
                    </ul>
                </div>


                <form class="form-inline my-2 my-lg-0" action="{{ path('searchBetween') }}" method="POST">
                    <div class="collapse navbar-collapse">
                        <input name="date1" class="form-control mr-sm-2" type="date">
                    </div>
                    <div class="collapse navbar-collapse">
                        <input name="date2" class="form-control mr-sm-2" type="date">
                    </div>
                    <button class="btn btn-secondary my-2 my-sm-0" type="submit">Rechercher</button>

                </form>

                <form class="form-inline my-2 my-lg-0" action="{{ path('search') }}" method="POST">
                    <input name="search" class="form-control mr-sm-2" type="text" placeholder="Rechercher">
                    <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
                </form>

            </nav>
        {% endblock %}
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
